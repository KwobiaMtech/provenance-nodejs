{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "moduleResolution": "Node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
